<h1>Paises</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for pais <- @paises do %>
    <tr>
      <td><%= pais.nome %></td>

      <td>
        <%= link "Visualizar", to: Routes.pais_path(@conn, :show, pais) %>
        <%= link "Editar", to: Routes.pais_path(@conn, :edit, pais) %>
        <%= link "Excluir", to: Routes.pais_path(@conn, :delete, pais), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "Novo", to: Routes.pais_path(@conn, :new) %></span>
